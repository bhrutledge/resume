mixin header(name)
  doctype html
  html
    head
      meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      title Resume | !{name}
      link(rel="stylesheet", href="https://unpkg.com/normalize.css")
      link(rel="stylesheet", href="style.css")
    body
      article
        block

mixin url(href)
  //- TODO: trim 'https://' for display
  .url
    a(href=href) !{href}

mixin section(title)
  section.section
    if title
      h2.title !{title}
    block

//- TODO: header?

mixin organization(name, city, description)
  section.organization
    h3.name !{name}
    if city
      h4.city !{city}
    block

mixin role(title, start, end)
  section.role
    h4.title !{title}
    h4.dates!= start + (end ? `&ndash;` + end : '')
    ul
      block
