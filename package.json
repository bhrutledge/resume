{
  "name": "resume",
  "version": "1.0.0",
  "description": "My résumé, written in Pug, then rendered to HTML and PDF.",
  "scripts": {
    "clean": "rm -rf dist",
    "build:html": "pug --pretty src/index.pug --out dist",
    "build:pdf": "src/html2pdf.js dist/index.html",
    "build": "run-s clean build:html build:pdf",
    "watch": "onchange --initial src -- run-s build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhrutledge/resume.git"
  },
  "keywords": [],
  "author": "Brian Rutledge <brian@bhrutledge.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bhrutledge/resume/issues"
  },
  "homepage": "https://github.com/bhrutledge/resume#readme",
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "pug-cli": "^1.0.0-alpha6"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^0.3.0",
    "chalk": "^2.4.1",
    "puppeteer": "^1.7.0"
  }
}
